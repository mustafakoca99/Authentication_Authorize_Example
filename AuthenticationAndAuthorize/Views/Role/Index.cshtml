@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of ROLES</h1>

<a href="@Url.Action("Create","Role")"> Role Ekle</a>


<table class="table table-striped table-bordered">

    <thead>
        <tr>
            <td>

                role id
            </td>
            <td>
                role name

            </td>
        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Id
                </td>


                <td>
                    @item.Name
                </td>
            </tr>
        }



    </tbody>
</table>